ptr+="var f = new Date();";
ptr+="var month= new Array(11);";
ptr+="month[0] =\"January\";";
ptr+="month[1] =\"February\";";
ptr+="month[2] = \"March\";";
ptr+="month[3] = \"April\";";
ptr+="month[4] = \"May\";";
ptr+="month[5] = \"June\";";
ptr+="month[6] = \"July\";";
ptr+="month[7] = \"August\";";
ptr+="month[8] = \"September\";";
ptr+="month[9] =\"October\";";
